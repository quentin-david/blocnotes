{% extends 'QTAppliBundle:Base:base.html.twig' %}


{% block listes %}
	<h4>Liste des noeuds</h4>
		<ul style="padding-left: 5px">
		{% for noeud in liste_noeuds %}
			{#<a href="#" id="{{info}}">{{info}}</a>#}
			<li style="list-style-type: none">
				<a href="{{ path('afficher_noeud', {'noeud_num': noeud.id}) }}">{{noeud.nom}}</a>
			</li>
		{% endfor %}
		</ul>

{% endblock %}

{% block contenu %}
    <h2 class="titre">
        Noeud : {{noeud.nom}}
        <a href="{{ path('editer_noeud', {'noeud_num': noeud.id}) }}">
            <img src="{{ asset('pictures/EditBlack.png') }}" class="w3-circle" style="height:25px;width:25px;margin-left:10px" title="editer application">
        </a>
    </h2>
    
    <h4>Identité</h4>
        <p>Nom : {{ noeud.nom }}</p>
        <p>Application : {{noeud.application.nom}}</p>
    
    <h4>Description</h4>
        <div class="w3-card-2 w3-round w3-black bloc_redige">
            {{ noeud.descriptionCourte }}
        </div>
    
    <h4>Description détaillée</h4>
        <div class="w3-card-2 w3-round w3-black bloc_redige">
            {{ noeud.description|raw }}
        </div>
    
    <h4>Réseau</h4>
        <table class="formulaire" style="border: 1px solid black">
            <tr>
                <th>IP admin</th>
                <td>{{ noeud.ipAdmin }}</td>
            </tr>
            <tr>
                <th>IP data</th>
                <td>{{ noeud.ipData }}</td>
            </tr>
        </table>
        
    <h4>Ressources physiques</h4>
        <table class="formulaire" style="border: 1px solid black">
			<tr>
                <th>Hyperviseur</th>
                <td>{{ noeud.hyperviseur.nom }}</td>
            </tr>
            <tr>
                <th>Nb CPU</th>
                <td>{{ noeud.nbCpu }}</td>
            </tr>
            <tr>
                <th>Nb RAM</th>
                <td>{{ noeud.nbRam }}</td>
            </tr>
        </table>
    
     <h4>Stockage - partionnement</h4>
    
{% endblock %}